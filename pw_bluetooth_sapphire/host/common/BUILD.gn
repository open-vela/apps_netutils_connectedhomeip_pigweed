    "status_unittest.cc",
    "supplement_data_unittest.cc",
    "task_domain_unittest.cc",
    "uuid_unittest.cc",
  ]

  deps = [
    ":common",
    "//garnet/public/lib/gtest",
    "//sdk/lib/inspect/testing/cpp",
    "//third_party/googletest:gtest",
  ]
}

fuzzer("advertising_data_fuzzer") {
  sources = [ "advertising_data_fuzztest.cc" ]
  deps = [ ":common" ]
}
